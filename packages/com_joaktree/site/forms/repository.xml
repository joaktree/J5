<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE form>
<form>
	<fieldset name="repository">
		<field
			name="app_id"
			type="hidden"
			filter="unset"
		/>
	
		<field
			name="id"
			type="hidden"
			filter="unset"
		/>

		<field 
			name="name" 
			type="text" 
			class="inputbox"
			required="true"
			size="50"
			maxlength="50"
			label="JT_LABEL_NAME" 	
			description ="JT_DESC_NAME" 
		/>

		<field 
			name="website" 
			type="text" 
			class="inputbox"
			size="50"
			maxlength="100"
			label="JT_WEBSITE" 	
			description ="JT_WEBSITE" 
		/>
		
	</fieldset>

</form>	
	