<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE metadata>
<metadata>
	<layout title="Chart">
		<message>
			<![CDATA[COM_JOAKTREE_DESCENDANTS_VIEW_DESC]]>
		</message>
	</layout>
	<fields name="params">
		<!-- Basic options. -->
		<fieldset 
			name="basic" 
			label="JTSTART_BASIC_FIELDSET_LABEL"
			addfieldprefix="Joaktree\Component\Joaktree\Administrator\Field"
		>
			
			<field  name="personId" type="person" 
				default="0"
				label="JTPERSON_LABEL" 	description="JTPERSON_DESC" 
			/>

			<field  name="ancestors" type="number" 
				default="3"
                label="JTANCESTORS_LABEL" description="JTANCESTORS_DESC" 
                class="clear half left"
			/>
			<field  name="descendants" type="number" 
				default="1"
				label="JTDESCENDANTS_LABEL" description="JTDESCENDANTS_DESC" 
                class="half"
			/>
			<field  name="color" type="color" 
				default="#737272"
				label="JTCOLOR_LABEL" description="JTCOLOR_DESC" 
                class="clear half left"
                />
			<field  name="background" type="color" 
				default="#e0e0e0"
				label="JTBACKGROUND_LABEL" description="JTBACKGROUND_DESC" 
                class="half"
                />
			<field  name="link" type="color" 
				default="#fff"
				label="JTLINK_LABEL" description="JTLINK_DESC" 
                class="clear left half"
                />
			<field  name="linksize" type="number" 
				default="1"
				label="JTLINKSIZE_LABEL" description="JTLINKSIZE_DESC" 
                class="half"
                />
			<field name="search" type="radio" class="btn-group third left" default="true"
				label="JTSEARCH_LABEL" 	description="JTSEARCH_DESC" >
                <option value="false">JNO</option> 
                <option value="true">JYES</option> 
			</field>
			<field  name="latest" type="radio" 
                class="btn-group third left" default="true"
				label="JTLATEST_LABEL" description="JTLATEST_DESC">
                <option value="false">JNO</option> 
                <option value="true">JYES</option> 
            </field>
			<field  name="latestsize" type="number" showon="latest:true"
				default="5" class="third left"
				label="JTLATESTSIZE_LABEL" description="JTLATESTSIZE_DESC" />
		</fieldset>
	</fields>
</metadata>